@model IEnumerable<EventManagement.DataModels.TrackDTO>
@{
    ViewBag.Title = "Track";
    Layout = "~/Views/Shared/_ConferenceLayout.cshtml";
}
<div class="NotHome">
    <div class="col-12">
        <div style="padding:0px 20px 20px 120px">
            <h2 class="heading">Our Scientific Sessions</h2>
            <br />
            <div style="font-size:19px">
                @for (int i = 0; i <= Model.Count() / 3; i++)
            {
                    <div class="col-md-12">
                        @{ var obj = Model.Skip(i * 3).Take(3);}
                        @foreach (var mem in obj)
                {
                            <div class="col-md-4">
                                <label class="track" onclick="loadPartial(@ViewData["ConferenceId"],@mem.Id)">@mem.Name</label><br />
                            </div>
                        }
                    </div>
                            }
            </div>
        </div>

        <div id='myModal' class='modal'>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div id='myModalContent'></div>
                </div>
            </div>
        </div>  

        <div style="padding-top:150px">
          @*  @{ Html.RenderAction("AbstractSubmit", "Conference", new { tracks = @Model, id = @ViewData["ConferenceId"] }); }*@
        </div>
    </div>
</div>
<script type="text/javascript">

    function loadPartial(confId, trackId) {
        var options = { "backdrop": "static", keyboard: true };
        $.ajax({
            type: "GET",
            url: '/eve/Conference/AbstractSubmit/' + confId,
            contentType: "application/json; charset=utf-8",
            //datatype: "json",
            success: function (data) {
                $('#myModalContent').html(data);
                $('#myModal').modal(options);
                $('#myModal').modal('show');

            },
            error: function () {
                $('#myModalContent').html("Error fetching Abstract");
            }
        });
    }
    
    $('.modal').click(function (e) {
        e.stopPropagation();
    });


</script>
