@model IEnumerable<EventManagement.DataModels.ConferenceDTO>

@{
    ViewBag.Title = "AllConferences";
    Layout = "~/Views/Shared/Layouts/_CMSLayout.cshtml";
}

<h2>AllConferences</h2>

<p>
    @Html.ActionLink("Create New Conference", "NewConference")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDt)
        </td>
        <td>
            @Html.ActionLink("Edit", "Conference", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteConference", new { id=item.Id })
        </td>
    </tr>
}

</table>
