@model EventManagement.DataModels.ConferenceDTO

@{
    ViewBag.Title = "NewImage";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<p>
    @Html.ActionLink("All Images", "AllConferenceImages")
</p>

<div>
    @using (Html.BeginForm("AddConferenceImages", "CMS", FormMethod.Post, new { encType = "multipart/form-data" }))
    {
        <div class="form-horizontal" style="padding:20px">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Id, new SelectList(@ViewBag.Conferences, "Id", "Name"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.ImagesUpload, new { @type = "file", @multiple = "multiple" })
                @*@Html.ValidationMessageFor(model => model.ImagesUpload, "", new { @class = "text-danger" })*@
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

    }
</div>
