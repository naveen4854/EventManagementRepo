@model IEnumerable<EventManagement.DataModels.VenueDTO>

@{
    ViewBag.Title = "AllVenues";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<h2>AllVenues</h2>

<p>
    @Html.ActionLink("Create Venue", "NewVenue")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Venue", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteVenue", new { id=item.Id })
        </td>
    </tr>
}

</table>
