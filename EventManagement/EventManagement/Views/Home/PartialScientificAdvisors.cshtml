@model IEnumerable<EventManagement.DataModels.TeamMemberDTO>
@{
    if (Model.Count() > 0)
    {
        <section id="SA">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div id="SA-carousel" class="carousel slide" data-interval="false">
                            <h2 class="header">Our Scientific Advisors</h2>
                            <button class="push-btn btn--sm flRt" onclick="redirect('@Url.Content("~/Home/ScientificAdvisors")')"><text>View More</text></button>
                            <div class="carousel-inner">
                                @for (int i = 0; i <= Model.Count() / 4; i++)
                                {
                                    <div class="item @if (i == 0) { <text>active</text>} ">
                                        <div class="row">
                                            @{ var obj = Model.Skip(i * 4).Take(4);}
                                            @foreach (var mem in obj)
                                            {
                                                <div class="col-sm-3">
                                                    <div class="single-event pointer">
                                                        <img class="img-responsive userImg" src="@Url.Content(@mem.ImageUrl)" alt="event-image">
                                                        <h4>@mem.Name</h4>
                                                        <h5>@mem.Info</h5>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                                }
                            </div>
                        </div>
                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#SA-carousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#SA-carousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>
                @*<div style="float:right;padding:0 0 10px 0">
                        <button class="btn" onclick="redirect('@Url.Content("~/Home/ScientificAdvisors")')"><text>View More</text></button>
                    </div>*@
            </div>
        </section>
                                                }
}
