@model IEnumerable<EventManagement.DataModels.TeamMemberDTO>

@{
    ViewBag.Title = "AllTeamMembers";
    Layout = "~/Views/Shared/Layouts/_CMSLayout.cshtml";
}

<h2>Team Members</h2>

<p>
    @Html.ActionLink("Create New", "NewSientificAdvisor")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Info)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Biography)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.ActionLink("Edit", "SientificAdvisor", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteSientificAdvisor", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<script>
    function redirect(url) {
        var val = $('#Conference').val();
        window.location = url.replace('val', val);
    }
</script>