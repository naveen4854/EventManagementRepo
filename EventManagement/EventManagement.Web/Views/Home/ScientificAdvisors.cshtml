@model IEnumerable<EventManagement.DataModels.TeamMemberDTO>
<div class="NotHome">
    @{
        if (Model.Count() > 0)
        {
            <h2 class="heading">Our Scientific Advisors</h2>
                <div class="container">
                    <div class="row">
                        <div class="col-12">

                            <div class="carousel-inner">
                                @for (int i = 0; i <= Model.Count() / 4; i++)
                                {
                                    <div class="row">
                                        @{ var obj = Model.Skip(i * 4).Take(4);}
                                        @foreach (var mem in obj)
                                        {
                                            <div class="col-sm-3">
                                                <div class="single-event pointer">
                                                    <img class="img-responsive userImg" src="@Url.Content(mem.ImageUrl)" alt="event-image">
                                                    <h4>@mem.Name</h4>
                                                    <h5>@mem.Info</h5>
                                                    <button class="push-btn btn--sm" onclick="abstractModal('@mem.Biography')"><text>Biography</text></button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                            }
                            </div>
                        </div>
                    </div>
                </div>
                                }
    }
</div>
<div id='myModal' class='modal'>

    <div class="modal-dialog">
        <div class="modal-content">

            <div id='myModalContent' class="col-12">
                <div class="row" style="margin:20px">
                    <div class="col-12">
                        <div class="col-md-11"><h2>Biography</h2></div>
                        <div class="col-md-1 pointer">
                            <i class="fa fa-window-close" id="modalClose" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                <div id="modaltxt" class="row" style="margin:20px">
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        processNoScroll();
    });

    function abstractModal(data) {

        var options = { "backdrop": "static", keyboard: true };

        $('#modaltxt').html(data);
        $('#myModal').modal(options);
        $('#myModal').modal('show');

    }

    $('.modal').click(function (e) {
        e.stopPropagation();
    });
    $('#modalClose').click(function () {
        $('.modal').modal('hide');
    });

   
</script>